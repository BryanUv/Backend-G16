generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id     String @id @default(uuid()) @db.Uuid
  nombre String @unique

  productos Productos[]

  @@map("categorias")
}

model Productos {
  id               String @id @default(uuid()) @db.Uuid
  nombre           String @unique
  precio           Float 
  disponinibilidad Boolean @default(true)
  imagen           String? 
  descripcion      String? 

  categoriaId String    @map("categoria_id") @db.Uuid
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  @@map("productos")
}